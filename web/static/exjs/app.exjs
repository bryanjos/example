defmodule App do
  import JS.Todo
  require JQuery

  ul = JQuery.("#todo-list")
  elem = JQuery.("#new-todo")

  Todo.bind_events(ul)
  Todo.list(ul)

  elem.keypress(fn(event) -> 
    case event do
      %{ which: 13 } ->
        Todo.add(ul, elem.val)
        elem.val("")      
    end
  end)
end